# MCP authentication token (generate with: openssl rand -hex 32)
BEARER_AUTH_TOKEN=

# GitHub token for private repos (optional, leave empty for public repos only)
GITHUB_TOKEN=

# Update schedule (cron format, default: every 6 hours)
UPDATE_SCHEDULE=0 */6 * * *

# OAuth 2.1 settings (for Claude.ai web, ChatGPT, Cursor, etc.)
OAUTH_ENABLED=true  # Enable OAuth 2.1 authentication (set to false if using only Bearer token)
OAUTH_CLIENT_ID=my-yarmcp-client
OAUTH_CLIENT_SECRET=  # generate with: openssl rand -hex 32
OAUTH_JWT_SECRET=  # JWT signing secret (generate with: openssl rand -hex 32) - IMPORTANT: persist this value
OAUTH_TOKEN_EXPIRY=2592000  # Access token lifetime in seconds (default: 30 days)
OAUTH_AUTHORIZE_PASSWORD=  # Optional password for consent screen

# Bind mount paths (absolute paths on your host)
# MCP container mounts (read-only for config/repos, writable for data)
MCP_BINDMOUNT_0=/opt/yarmcp/config      # Config directory
MCP_BINDMOUNT_1=/opt/yarmcp/repos       # Repositories directory
MCP_BINDMOUNT_2=/opt/yarmcp/data        # Data directory (OAuth clients storage)

# Updater container mounts
UPDATER_BINDMOUNT_0=/opt/yarmcp/config  # Config directory (read-only)
UPDATER_BINDMOUNT_1=/opt/yarmcp/repos   # Repositories directory (read-write)
UPDATER_BINDMOUNT_2=/opt/yarmcp/secrets/ssh  # SSH keys directory (optional, for private repos)

